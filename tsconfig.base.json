{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2022"],
		"moduleResolution": "Node",
		"rootDir": "./",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
        "declaration": true,
        "declarationDir": "dist/types/"
	},
	"exclude": ["node_modules", "dist", "tests"],
	"include": ["src/**/*"]
}
